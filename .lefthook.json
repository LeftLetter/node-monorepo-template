{
	"commit-msg": {
		"parallel": true,
		"commands": {
			"commitlint": {
				"root": ".",
				"run": "pnpm commitlint --edit \"$1\""
			}
		}
	},
	"pre-commit": {
		"parallel": true,
		"commands": {
			"biome": {
				"glob": "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}",
				"run": "pnpm biome {staged_files}"
			},
			"markdownlint": {
				"glob": "*.{md}",
				"run": "pnpm markdownlint-cli2 {staged_files}"
			}
		}
	}
}
