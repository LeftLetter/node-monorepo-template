{
	"useGitignore": true,
	"patterns": [
		{
			"description": "Japanese letters",
			"name": "japaneseLetters",
			"pattern": "[０-９Ａ-Ｚａ-ｚぁ-んァ-ヶ亜-熙纊-黑]+"
		},
		{
			"description": "Library and tool names",
			"name": "libraryAndToolNames",
			"pattern": [
				"pnpx",
				"devcontainer",
				"commitlint",
				"biomejs",
				"nestjs",
				"lefthook",
				"mdlint"
			]
		},
		{
			"description": "Business-specific words",
			"name": "businessSpecificWords",
			"pattern": []
		},
		{
			"description": "Other words",
			"name": "otherWords",
			"pattern": []
		}
	],
	"ignoreRegExpList": [
		"japaneseLetters",
		"libraryAndToolNames",
		"businessSpecificWords",
		"otherWords"
	],
	"ignorePaths": [".devcontainer", "pnpm-lock.yaml", ".gitignore"]
}
